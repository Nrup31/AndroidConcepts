<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:clipToPadding="false"
    card_view:cardBackgroundColor="#FFCDD2"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="10dp"
    card_view:contentPadding="10dp"
    card_view:theme="@style/Theme.AppCompat.Light.Dialog"
>
    <TextView
        android:id="@+id/row_mcq_tv_question"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:padding="10dp"
        android:text="Question"
        android:textAppearance="?android:attr/textAppearanceLarge"

    />

    <!-- Used for the ripple effect on touch -->
    <LinearLayout
        android:id="@+id/mainHolder"
        android:layout_width="match_parent"
        android:layout_height="250dp"

        android:orientation="horizontal"/>

    <LinearLayout
        android:id="@+id/placeNameHolder"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="bottom"
        android:background="#FEDCBA"
        android:orientation="vertical">

        <TextView
            android:id="@+id/row_mcq_tv_optionA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:padding="10dp"
            android:text="Option A"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/row_mcq_tv_optionB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:padding="10dp"
            android:text="Option B"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/row_mcq_tv_optionC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:padding="10dp"
            android:text="Option C"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/row_mcq_tv_optionD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:padding="10dp"
            android:text="Option D"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black"/>

    </LinearLayout>

</android.support.v7.widget.CardView>

